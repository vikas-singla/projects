@model Oceanus.ViewModels.BasePhotoVideoClipViewModel
@{
    var domain = Request.Url.Scheme + System.Uri.SchemeDelimiter + Request.Url.Host + (Request.Url.IsDefaultPort ? "" : ":" + Request.Url.Port);               
}
<div style="width: 720px; margin: 0 auto; border: 1px solid #d9d9d9; clear: both;padding: 10px;">
    <div style="padding-bottom:5px; margin-bottom: 10px; border-bottom: 1px solid #d9d9d9;
        overflow: auto;">
        <img src="@(domain + "/images/sitetheme/Pipfly_logo_sm.png")" width="78px" alt="Pipfly" />
    </div>
    <div style="padding: 15px 0;font-family: 'Helvetica Neue',Arial,Helvetica,sans-serif;font-size:12px;">
        <a href="www.pipfly.com/u/@(ViewBag.UserId)">@(ViewBag.UserFullName)</a> shared
        a clip with you (via Pipfly):
    </div>
    <div style="clear: both; overflow: auto;">
        <div style="width: 234px; float: left; overflow: hidden; text-align: center; margin-right: 20px;
            margin-bottom: 10px; border: none;">
            <img id="clipimagephototag" style="max-height:234px;max-width:234px;width:auto!important;height:auto!important;padding:0;border: 1px solid #D9D9D9;" 
                alt src="@(Model.ImageUrl != null ? ("www.pipfly.com/uploads/scrapbook/" + Model.ImageUrl) : Model.SourceUrl)" />
        </div>
        @if (ViewBag.ClipComments != null && ((string)ViewBag.ClipComments).Trim().Length > 0)
        {
            <div style="margin: 0 auto 0 auto; padding: 0 0 0 20px;
                overflow: hidden; width: 390px; float: left;">
                <div style="width: 365px; font-size: 12px; font-weight: bold; text-align: left; vertical-align: top;
                    padding-bottom: 5px;font-family: 'Helvetica Neue',Arial,Helvetica,sans-serif;">
                    Comments by @(ViewBag.UserFirstName):
                </div>
                <div style="width: 365px; text-align: left;">
                    @(ViewBag.ClipComments)
                </div>
            </div>
        }
    </div>
</div>
<br />
<div style="width:740px;color: #777;margin: 0 auto;padding: 10px 0px; font-size: 10px;border-top:3px double #d9d9d9;font-family: 'Helvetica Neue',Arial,Helvetica,sans-serif;">
    <a href="www.pipfly.com" target="_blank" style="color: #106fb8; font-size: 12px;text-decoration:none;font-family: 'Helvetica Neue',Arial,Helvetica,sans-serif;">www.pipfly.com</a><br />
    © Six Loonies Inc. 2012
</div>