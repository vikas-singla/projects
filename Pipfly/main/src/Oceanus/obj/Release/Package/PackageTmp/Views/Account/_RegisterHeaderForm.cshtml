@model Oceanus.Models.RegisterModel
<div id="registerdropdown" style="display: none;">
    <div class="registersect">
        @using (Html.BeginForm("Register", "Account", new { returnURL = ViewContext.HttpContext.Request.Url.AbsolutePath }))
        {
            @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
            <div>
                <fieldset>
                    <div class="editor-label bold">
                        First Name
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.FirstName)
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                    <div class="editor-label bold">
                        Last Name
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.LastName)
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                    <div class="editor-label bold">
                        Email
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="editor-label bold">
                        Password
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <br />
                    <p>
                        <input type="submit" class="btnbluestyle" value="Create Account" />
                    </p>
                    <div class="horizrule"><span class="bold">OR</span></div>
                    <p>
                        <a href="#" class="btnstyle" id="facebooksigninbtn2"><img alt src="/images/facebook.gif" /> Connect with Facebook</a>
                    </p>
                </fieldset>
            </div>
        }
    </div>
</div>
