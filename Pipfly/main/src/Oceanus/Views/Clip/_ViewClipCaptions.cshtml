@model IEnumerable<Oceanus.ViewModels.ClipDescriptionViewModel>
<div class="userwall">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var caption in Model)
        {
        <div class="wallpost">
            <div style="clear: both; overflow: auto;">
                <div class="postuserimg" title="@(caption.ContributingUserProfile.FullName)">
                    <a href="/u/@(caption.ContributingUserProfile.Id)">
                        <img src="@(caption.ContributingUserProfile.UserProfileImageUrl == null ? "/images/user.jpg" : caption.ContributingUserProfile.UserProfileImageUrl)" width="50px" alt /></a>
                </div>
                <div class="postcontent">
                    <div style="clear: both; padding-bottom: 3px;">
                        <a href="/u/@(caption.ContributingUserProfile.Id)" style="font-weight:bold;">@(caption.ContributingUserProfile.FullName)'s</a>
                        caption:</div>
                    @(caption.DescriptionText)
                </div>
            </div>
        </div>
        }
    }
</div>
