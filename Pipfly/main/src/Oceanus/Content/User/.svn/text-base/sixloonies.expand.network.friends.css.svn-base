.expandnetworkscrollpanel
{
    width: 650px;
    margin: 20px 0 0px;
}
.expandnetworkscrollpanel .viewport
{
    width: 630px;
    height: 170px;
    overflow: hidden;
    position: relative;
}
.expandnetworkscrollpanel .overview
{
    list-style: none;
    position: absolute;
    left: 0;
    top: 0;
    padding: 0;
    margin: 0;
}
.expandnetworkscrollpanel .scrollbar
{
    background: transparent url(/images/sitetheme/scrollbar-track-y.png) no-repeat 0 0;
    position: relative;
    background-position: 0 0;
    float: right;
    width: 15px;
}
.expandnetworkscrollpanel .track
{
    background: transparent url(/images/sitetheme/scrollbar-trackend-y.png) no-repeat 0 100%;
    height: 100%;
    width: 13px;
    position: relative;
    padding: 0 1px;
}
.expandnetworkscrollpanel .thumb
{
    background: transparent url(/images/sitetheme/scrollbar-thumb-y.png) no-repeat 50% 100%;
    height: 20px;
    width: 25px;
    cursor: pointer;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: -5px;
}
.expandnetworkscrollpanel .thumb .end
{
    background: transparent url(/images/sitetheme/scrollbar-thumb-y.png) no-repeat 50% 0;
    overflow: hidden;
    height: 5px;
    width: 25px;
}
.expandnetworkscrollpanel .disable
{
    display: none;
}

#expandnetworksect
{
    overflow: auto;
}

.fullsect .friend
{
    float: left;
    width: 174px;
    padding: 10px;
    vertical-align: top;
    margin-right: 15px;
    margin: 0px 5px 15px 5px;
    background-color: #F2F2EB;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
}

.fullsect .friend .details
{
    display: block;
}

.fullsect .friend .name
{
    float: left;
    width:114px;
    font-weight: bold;
    color: #505050;
    font-size: 12px;
}

.fullsect .friend .btnsect
{
    margin-top: 5px;
    float: left;
}

.fullsect .friend .btnsect .smalltext
{
    color: #bd3b61;
}

.fullsect .friend .photo
{
    width: 50px;
    height: 50px;
    float: left;
    margin-right: 10px;
}
