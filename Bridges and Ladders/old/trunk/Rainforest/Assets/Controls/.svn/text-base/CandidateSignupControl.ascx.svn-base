<%@ Control Language="C#" AutoEventWireup="true" CodeBehind="CandidateSignupControl.ascx.cs"
    Inherits="Rainforest.Assets.Controls.CandidateSignupControl" %>

<table cellpadding="10px" cellspacing="0px" class="SignupControlMainTableStyle">
    <tr>
        <td class="SignupControlLeftColumnStyle">
            <table cellpadding="0px" cellspacing="0px" width="60%">
                <tr>
                    <td>
                    </td>
                </tr>
            </table>
        </td>
        <td class="SignupControlRightColumnStyle">
            <div>
                <div id="div_joinnowheader">
                    <asp:Label ID="Lbl_JoinNow" runat="server" CssClass="lbl_joinnowstyle">Join Today</asp:Label><br />
                    <div style="padding-top:5px; padding-bottom:2px" class="header_seperator_style">
                        <asp:Label ID="Lbl_JoinNowSubtext" runat="server" CssClass="lbl_joinnowsubtext">It's FREE and it's EASY as 1-2-3!</asp:Label><br />
                    </div>
                </div>
                <div id="div_joinnowfields">
                    <table id="tbl_joinnowfields" cellpadding="2px" cellspacing="10px" width="280px">
                        <tr>
                            <td id="rightcolumn1">
                                <asp:Label ID="Lbl_FirstName" runat="server" CssClass="lbl_fieldstyle">First Name:</asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="TextBox_FirstName" runat="server" CssClass="textbox_inputstyle"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td id="rightcolumn2">
                                <asp:Label ID="Lbl_LastName" runat="server" CssClass="lbl_fieldstyle">Last Name:</asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="TextBox_LastName" runat="server" CssClass="textbox_inputstyle"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td id="rightcolumn3">
                                <asp:Label ID="Lbl_Email" runat="server" CssClass="lbl_fieldstyle">Email:</asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="TextBox_Email" runat="server" CssClass="textbox_inputstyle"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td id="rightcolumn4">
                                <asp:Label ID="Lbl_Password" runat="server" CssClass="lbl_fieldstyle">Password:</asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="TextBox_Password" runat="server" TextMode="Password" CssClass="textbox_inputstyle"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <asp:Button ID="Btn_JoinNow" runat="server" Text="Join Now" CssClass="btn_joinnowStyle" />
                                <asp:Label ID="Lbl_JoinNowStar" runat="server" Text="*" CssClass="lbl_joinnowstarstyle"></asp:Label>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <asp:Label ID="Lbl_Signin" runat="server" Text="Already on Bridges and Ladders? "
                                    CssClass="lbl_signinStyle"></asp:Label>
                                <asp:HyperLink ID="Link_Signin" runat="server" Text="Sign in." CssClass="link_signinstyle"
                                    NavigateUrl="/" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </td>
    </tr>
</table>
