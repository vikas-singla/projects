@model IEnumerable<Oceanus.ViewModels.ClipCommentViewModel>
@if (Model != null && Model.Count() > 0)
{
    foreach (var WallPost in Model)
    {
    <div class="wallpost">
        <div style="clear: both; overflow: auto;">
            <div class="postuserimg" title="@(WallPost.ContributingUserProfile.FullName)">
                <a href="/u/@(WallPost.ContributingUserProfile.Id)">
                    <img src="@(WallPost.ContributingUserProfile.UserProfileImageUrl == null ? "/images/user.jpg" : WallPost.ContributingUserProfile.UserProfileImageUrl)" width="30px" alt />
                </a>
            </div>
            <div class="postcontent">
                <div style="clear: both;">
                    <a href="/u/@(WallPost.ContributingUserProfile.Id)" style="font-weight:bold;">@(WallPost.ContributingUserProfile.FullName)</a>
                    wrote:</div>
                @(WallPost.CommentText)
                <div class="postfooter">
                    @(WallPost.ContributionDate.ToString("MMMM d, yyyy"))
                </div>
            </div>
        </div>
    </div>
    }
}
else
{
    <div class="emptywall">
        @if (!Request.IsAuthenticated)
        {
            <text>Please <a href="#" id="cliploginbtn">login</a> to write comments on this clip.</text>
        }
    </div>
}
