@model Oceanus.ViewModels.ArticleViewModel
@using SquishIt.Framework
@{
    @MvcHtmlString.Create(
        Bundle.JavaScript()
        .Add("~/Scripts/pipfly.articles.helper.js")
        .Add("~/Scripts/pipfly.clip.share.js")
        .Render("~/cache/pipfly.clip.share.#.js")
    );
}
@{
    @MvcHtmlString.Create(
        Bundle.Css()
            .Add("~/Content/shared/pipfly.shareitems.overlay.css")
            .ForceRelease()
            .Render("~/cache/pipfly.shareitem.#.css")
        );
}
<div class="expandnetworkoverlay sharearticlesect">
    <div class="formcontainer">
        <form id="sl_frmClipStory" data-article-id="@(Model.ArticleId)">
        <div class="clipstorytitle">
            Share Article
        </div>
        <div class="formfields">
            <div class="formfield">
                <div class="lbl">
                    Share With:</div>
                <div class="field">
                    <input id="shareArticleRecipientInput" />
                </div>
            </div>
            <div class="formfield">
                <div class="lbl">
                    Comments <span class="smalltext" style="color: #888; position: relative; top: -1px;">
                        (optional)</span>:
                </div>
                <div class="field">
                    <textarea id="sl_sharearticlecomments" name="comments" rows="1" cols="1"></textarea></div>
            </div>
            <div class="formfield">
                <div class="btns">
                    <a href="#" class="btnbluestyle" id="sl_sharearticleclipbtn" data-article-id="@(Model.ArticleId)">
                        Share It</a>
                    <div id="sl_processingcaption" style="display: none;">
                        <img src="/images/transparent_loader.gif" width="16px" alt /><span style="padding-left: 10px;
                            position: relative; top: -5px;">Processing Clip...</span>
                    </div>
                </div>
            </div>
        </div>
        <div id="sharearticlemarkup" data-trim-value="@(Model.ShareArticleMarkup == null ? "true" : "false")">
            @Html.Raw(Model.ShareArticleMarkup == null ? Model.ArticleMarkup : Model.ShareArticleMarkup)
        </div>
        </form>
    </div>
</div>
