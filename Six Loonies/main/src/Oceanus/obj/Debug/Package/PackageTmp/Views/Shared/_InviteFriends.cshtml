@using SquishIt.Framework
@if (Request.IsAuthenticated)
{
    @MvcHtmlString.Create(
        Bundle.Css()
            .Add("~/Content/shared/pipfly.getstarted.css")
            .ForceRelease()
            .Render("~/cache/pipfly.intefriends.#.css")
        );
    @MvcHtmlString.Create(
        Bundle.JavaScript()
        .Add("~/Scripts/pipfly.user.invite.friends.js")
        .Render("~/cache/pipfly.invitefriends.#.js")
    );
}
<div class="welcomeinvitecontainer" id="invitefriendscontainer" style="margin-top: 30px;">
    <div class="welcome">
        Invite your friends to Pipfly
    </div>
    <div style="overflow: auto; clear: both; margin-bottom: 30px;">
        <div class="leftpanel">
            <div class="invitemenu">
                <a id="invitefbmenuitem" href="#" rel="#invitefriendscontainer #ifacebook" class="invitemenuitem selinvitemenuitem">
                    Facebook</a> <a href="#" rel="#invitefriendscontainer #iemail" class="invitemenuitem">
                        Email</a>
            </div>
        </div>
        <div class="rightpanel" id="ifacebook">
            @{Html.RenderAction("UserProfileExpandNetwork", "Account");}
        </div>
        <div class="rightpanel" id="iemail" style="display: none;">
            <div class="formfields">
                <div class="formfield">
                    <div class="lbl">
                        To:</div>
                    <div class="field">
                        <input id="writeMessageToInput" />
                    </div>
                </div>
                <br />
                <div class="formfield">
                    <div class="lbl">
                        Message:
                    </div>
                    <div class="field">
                        <textarea id="writeMessageBodyInput" style="min-height: 70px;" class="validate[required]"
                            rows="3" cols="1"></textarea>
                    </div>
                </div>
                <br />
                <div class="options">
                    <div class="btns">
                        <a href="#" class="btnbluestyle" id="sendemailinvitebtn">Send Invite</a>
                    </div>
                    <div id="sl_processingcaption" style="display: none;">
                        <img src="/images/transparent_loader.gif" width="16px" alt /><span style="padding-left: 10px;
                            position: relative; top: -5px;">Sending Invite...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
