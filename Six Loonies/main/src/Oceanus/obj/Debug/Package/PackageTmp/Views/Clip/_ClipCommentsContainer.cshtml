<div class="fullsect">
    <div class="section" style="margin: 0px;">
        <div class="userwall">
            <div class="walltitle">
                <div class="cliptitletext" style="font-size: 14px">
                    Comments
                </div>
            </div>
            <div id="clipwallposts">
                @{Html.RenderAction("GetClipCommentPosts", "Clip", new { clipId = ViewBag.ClipId });}
                @if (Request.IsAuthenticated)
                {
                    if (ViewBag.LoggedInUserProfileViewModel != null)
                    {
                        Oceanus.ViewModels.BaseUserViewModel loggedInUserViewModel = (Oceanus.ViewModels.BaseUserViewModel)ViewBag.LoggedInUserProfileViewModel;        
                    <div class="wallpost">
                        <div style="clear: both; overflow: auto;">
                            <div class="postuserimg" title="@(loggedInUserViewModel.FullName)">
                                <a href="/u/@(loggedInUserViewModel.Id)">
                                    <img src="@(loggedInUserViewModel.UserProfileImageUrl == null ? "/images/user.jpg" : loggedInUserViewModel.UserProfileImageUrl)" width="30px" alt />
                                </a>
                            </div>
                            <div class="postcontent">
                                <textarea id="clipcommentpostinput" data-clip-id="@(ViewBag.ClipId)"  rows="1"></textarea>
                                <div class="postcommentinputboxfooter">
                                    Press <span class="bold" style="color: #111">Enter</span> to post your comment</div>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
