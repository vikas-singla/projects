#accordion h3
{
    font-weight:bold;
    font-size:12px;
    cursor:pointer;
}

.ui-accordion
{
    clear:both;
    width:100%;
}

.ui-accordion .ui-accordion-header
{
    padding:5px 5px;
    display:block;
    color:#106fb8;
    zoom:1;
    outline:none;
}

.ui-accordion .ui-state-active
{    
    background:#f5f5f5;
    color:#444;
}

.ui-accordion .ui-state-active .showdetails
{
    background: url('/images/scrollarrow_up.gif');
    width:12px;
    height:12px;
    display:block;
    float:right;
    margin-right:5px;
}

.ui-accordion .accordionborder
{
    border-top:1px solid #e9e9e9;
}

.ui-accordion .ui-accordion-header:hover
{
    background:#f5f5f5;
    outline:none;
}

.ui-accordion .ui-accordion-content
{
    zoom:1;
    padding:5px 5px 15px 5px;        
    background:#f5f5f5;
}
