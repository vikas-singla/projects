@model IEnumerable<Oceanus.ViewModels.ServicePackagesViewModel>
@{
    ViewBag.Title = "Index";
}
@if (Model == null || Model.Count() == 0)
{ 
    <p>
        There are currently no service price points.</p>
}
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @String.Format("{0:F}", item.Price)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <input type="image" src="/Images/delete.png" alt="X" onclick="javascript: deleteServicePkg('@(item.Id)');" />
                </td>
            }
        </tr>
    }
</table>
