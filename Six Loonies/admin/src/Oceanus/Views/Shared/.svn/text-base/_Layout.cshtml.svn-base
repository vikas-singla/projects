<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.fancybox-1.3.4.pack.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="title">
                <h1>
                    Six Loonies</h1>
            </div>
            <div class="menucontainer">
                <ul class="menu">
                    <li>@Html.ActionLink("Home", "Index", "")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                        <li>@Html.ActionLink("Vendors", "Index", "Vendor")</li>
                    }
                </ul>
            </div>
        </div>
        <div id='mask'>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
                (c) Six Loonies 2011
            </div>
        </div>
    </div>
</body>
</html>
