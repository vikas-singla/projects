@model IEnumerable<Oceanus.ViewModels.VendorImageViewModel>
@{
    ViewBag.Title = "Index";
}
@if (Model == null || Model.Count() == 0)
{ 
    <p>
        There are currently no vendor portfolio images.</p>
}
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            ImageUrl
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.ImageUrl
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <input type="image" src="/Images/delete.png" alt="X" onclick="javascript: deleteVendorImage(@(item.Id));return false;" />
                </td>
            }
        </tr>
    }
</table>
